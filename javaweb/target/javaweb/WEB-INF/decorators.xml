<?xml version="1.0" encoding="UTF-8"?>
<decorators defaultdir="/decorators">
    <excludes>
        <pattern>/api*</pattern>
    </excludes>

<!--    Lọc các url pattern nếu thuộc admin thì sẽ được áp dụng decorator của admin và ngược lại-->
    <decorator name="admin" page="admin.jsp">
        <pattern>/admin*</pattern>
    </decorator>

    <decorator name="web*" page="web.jsp">
        <pattern>/*</pattern>
    </decorator>
</decorators>